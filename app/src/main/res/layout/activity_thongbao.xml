<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.iakremera.pushnotificationdemo.ThongbaoActivity"
              android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/danhan"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/add_tb"
        android:layout_toEndOf="@+id/add_tb"
        android:layout_alignParentRight="false"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="333dp"
        android:id="@+id/listView2"
        android:layout_below="@+id/add_tb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Add "
        android:id="@+id/add_tb"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/listView2"
        android:layout_alignEnd="@+id/listView2"
        android:layout_marginRight="98dp"
        android:layout_marginEnd="98dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/add_tb"
        android:layout_toLeftOf="@+id/add_tb"
        android:layout_toStartOf="@+id/add_tb"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp"/>
</RelativeLayout>
