<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:id="@+id/layout"
    tools:context=".MainActivity"
     android:weightSum="4"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="337dp"
        android:inputType="text"
        android:hint="@string/thongbao"
        android:ems="10"
        android:id="@+id/edt_thongbao"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.75"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignParentTop="true"/>
    <Button
        android:id="@+id/senPushB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_below="@+id/edt_thongbao"
        android:layout_alignParentRight="true"
        android:layout_marginRight="62dp"
        android:layout_marginTop="65dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move"
        android:id="@+id/move"
        android:layout_alignBottom="@+id/senPushB"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move 2"
        android:id="@+id/move2"
        android:layout_alignTop="@+id/senPushB"
        android:layout_centerHorizontal="true"/>

</RelativeLayout><!-- From: file:/C:/Users/Diep_Chelsea/Downloads/pushNotificationDemo-master2/app/src/main/res/layout/activity_main.xml -->