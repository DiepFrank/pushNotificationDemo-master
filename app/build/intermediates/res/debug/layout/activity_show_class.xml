                android:layout_height="40dp"
                android:text="Ngày học :"
                android:textSize="20dp"
                android:id="@+id/txtngayhoc1"
                android:layout_column="21"
                android:paddingLeft="30dp"/>

            <TextView
                android:layout_width="wrap_content"
