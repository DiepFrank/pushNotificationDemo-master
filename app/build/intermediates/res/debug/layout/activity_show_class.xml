
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.iakremera.pushnotificationdemo.ShowClass"
              android:weightSum="1"
              android:background="@drawable/rsz_wpp5_2"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:entries="@array/grade"
                android:id="@+id/search_grade"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/bt_searchclass"
                android:layout_toStartOf="@+id/bt_searchclass"
                android:layout_marginLeft="70dp"/>

            <Spinner
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:id="@+id/search_subject"
                android:entries="@array/subject"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/bt_searchclass"
                android:layout_toEndOf="@+id/bt_searchclass"
                android:layout_marginLeft="20dp"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/bt_searchclass"
                android:layout_weight="1"
                android:src="@drawable/sicon"
                android:onClick="search_class"
                android:layout_gravity="right"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="37dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không tìm thấy"
                android:textSize="20dp"
                android:id="@+id/total"
                android:layout_column="22"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txtx"
                android:layout_toEndOf="@+id/txtx"
                android:layout_marginLeft="41dp"
                android:layout_marginStart="41dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtx"
                android:layout_height="wrap_content"
                android:text="Tổng số buổi học :"
                android:layout_alignBottom="@+id/total"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="20dp"/>
        </RelativeLayout>

    </LinearLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>

        </TableRow>
        <TableRow>
